  <script>
    // Set current date
    const dateElement = document.getElementById('current-date');
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    dateElement.textContent = new Date().toLocaleDateString('en-US', options);
    
    // Functions to parse and display data from JSON
    function initDashboard(data) {
      // Client information
      document.getElementById('client-name').textContent = data.client.fullName;
      document.getElementById('client-phone').textContent = data.client.contact.phone;
      document.getElementById('client-email').textContent = data.client.contact.email;
      document.getElementById('client-address').textContent = data.client.contact.address;
      document.getElementById('risk-tolerance').textContent = data.client.preferences.riskTolerance;
      
      // Communication preferences
      const commPrefs = `${data.client.preferences.communication.preferredChannel}, 
                         ${data.client.preferences.communication.frequency}, 
                         ${data.client.preferences.communication.bestTime}`;
      document.getElementById('communication-pref').textContent = commPrefs;
      
      document.getElementById('call-character').textContent = data.client.preferences.callCharacter;
      
      // Portfolio summary
      document.getElementById('total-value').textContent = `Û${data.portfolio.summary.totalValue.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
      document.getElementById('ytd-return').textContent = `${data.portfolio.summary.ytdReturn}%`;
      document.getElementById('drawdown').textContent = `${data.portfolio.performance.drawdown}%`;
      
      // Market indices
      document.getElementById('cac40').textContent = data.marketData.indices.CAC40.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
      document.getElementById('dax').textContent = data.marketData.indices.DAX.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
      document.getElementById('eu10y').textContent = `${data.marketData.indices.EU10Y}%`;
      
      // Economic indicators
      document.getElementById('inflation').textContent = `${data.marketData.economicIndicators.inflation}%`;
      document.getElementById('interest-rate').textContent = `${data.marketData.economicIndicators.interestRate}%`;
      document.getElementById('gdp-growth').textContent = `${data.marketData.economicIndicators.gdpGrowth}%`;
      
      // Benchmark return
      document.getElementById('benchmark-return').textContent = data.callContext.performanceSummary.benchmarkReturn;
      
      // Recommendations
      document.getElementById('recommendation-rebalance').textContent = data.callContext.recommendations.rebalance;
      document.getElementById('recommendation-longterm').textContent = data.callContext.recommendations.longTermView;
      document.getElementById('manager-actions').textContent = data.callContext.recommendations.managerActions;
      
      // Next steps
      document.getElementById('next-followup').textContent = data.callContext.nextSteps.followUp;
      document.getElementById('next-documents').textContent = data.callContext.nextSteps.documentVault;
    }
    
    // This would normally be fetched from an API endpoint
    const jsonData = {
      "client": {
        "fullName": "Isabelle Dubois",
        "contact": {
          "phone": "+33-6-12-34-56-78",
          "email": "isabelle.dubois@example.com",
          "address": "15 Rue de Rivoli, Paris, France"
        },
        "preferences": {
          "riskTolerance": "Moderate",
          "goals": ["Retirement (10 years)", "Children's University Funds"],
          "interests": ["Art History", "Sustainable Investments"],
          "communication": {
            "preferredChannel": "Email",
            "frequency": "Quarterly",
            "bestTime": "Morning"
          },
          "callCharacter": "Analytical and Proactive"
        }
      },
      "portfolio": {
        "summary": {
          "totalValue": 850000.00,
          "ytdReturn": -4.2,
          "assetAllocation": {
            "stocks": 60,
            "bonds": 30,
            "alternatives": 10
          }
        },
        "performance": {
          "ytdReturn": -4.2,
          "drawdown": -5.5
        }
      },
      "marketData": {
        "indices": {
          "CAC40": 7500.00,
          "DAX": 16800.00,
          "EU10Y": 3.05
        },
        "economicIndicators": {
          "inflation": 3.2,
          "interestRate": 4.0,
          "gdpGrowth": 1.5
        }
      },
      "callContext": {
        "performanceSummary": {
          "portfolioReturn": "-4.2%",
          "benchmarkReturn": "-2.5%"
        },
        "recommendations": {
          "rebalance": "Consider rebalancing to reduce exposure to ASML.AS and NOVO-B.CO, and potentially increase bond or defensive sector allocation.",
          "longTermView": "Reiterate the 10-year retirement goal and the importance of staying focused on long-term objectives despite short-term fluctuations.",
          "managerActions":"Portfolio was rebalanced in February, reducing NOVO-B.CO exposure. Further review of the semiconductor sector is required."
        },
        "nextSteps": {
          "followUp": "Schedule a detailed portfolio review in three weeks to discuss potential adjustments and market outlook.",
          "documentVault": "Provide updated portfolio analysis and market commentary, emphasizing sustainable investment opportunities."
        }
      }
    };
    
    // Initialize dashboard with data
    initDashboard(jsonData);
  </script>
